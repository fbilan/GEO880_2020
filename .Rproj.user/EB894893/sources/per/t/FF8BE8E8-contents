linearMod <- lm(distance ~ duration, data=bike_plot)
summary(linearMod) # adj. rsquared 1.73% -> very low

scatter.smooth(x=bike_plot$distance, xlab="Trip Distance", y=bike_plot$duration, ylab="Trip Duration", main=" ")
